<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login">

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:contentDescription="header"
        android:src="@drawable/header"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-28dp"
        tools:layout_editor_absoluteY ="1dp" />


    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Welcome back..!"
        android:textColor="#fff"
        android:textSize="21sp"
        android:paddingLeft="30dp"
        app:layout_constraintEnd_toEndOf ="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="13dp"
        app:cardBackgroundColor="#E4FFFFFF"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEFFFFFF"
            android:padding="20dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="LOGIN TO ACCOUNT"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/usr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="7dp"
                android:text="username "
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/usrname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usr"
                android:background="@drawable/edit_txt"
                android:hint="xyz@gmail.com"
                android:padding="10dp" />

            <TextView
                android:id="@+id/pss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usrname"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="7dp"
                android:text="password "
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pss"
                android:background="@drawable/edit_txt"
                android:hint="*********"
                android:inputType="textPassword"
                android:padding="10dp" />

            <Button
                android:id="@+id/btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pass"
                android:layout_marginTop="30dp"
                android:background="@drawable/verify"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:text="LOGIN"
                android:textColor="#fff"
                android:textSize="20sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>


</RelativeLayout>